{
  "name": "flux-diagram",
  "displayName": "FluxDiagram",
  "description": "Advanced fluxdiagram builder with modern UI and support for large diagrams",
  "version": "1.0.4",
  "publisher": "sitharaj",
  "repository": {
    "type": "git",
    "url": "https://github.com/sitharaj88/flux-diagram.git"
  },
  "bugs": {
    "url": "https://github.com/sitharaj88/flux-diagram/issues"
  },
  "homepage": "https://github.com/sitharaj88/flux-diagram#readme",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "flowchart",
    "diagram",
    "graph",
    "visualization",
    "workflow"
  ],
  "icon": "media/flux-icon.png",
  "galleryBanner": {
    "color": "#1e1e2e",
    "theme": "dark"
  },
  "activationEvents": [
    "onCustomEditor:fluxDiagram.editor",
    "onView:fluxDiagram.fluxdiagrams",
    "onView:fluxDiagram.templates",
    "onView:fluxDiagram.recent"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fluxDiagram.newFluxdiagram",
        "title": "New Fluxdiagram",
        "category": "FluxDiagram",
        "icon": "$(add)"
      },
      {
        "command": "fluxDiagram.exportPNG",
        "title": "Export as PNG",
        "category": "FluxDiagram",
        "icon": "$(export)"
      },
      {
        "command": "fluxDiagram.exportSVG",
        "title": "Export as SVG",
        "category": "FluxDiagram"
      },
      {
        "command": "fluxDiagram.exportJSON",
        "title": "Export as JSON",
        "category": "FluxDiagram"
      },
      {
        "command": "fluxDiagram.autoLayout",
        "title": "Auto Layout",
        "category": "FluxDiagram",
        "icon": "$(layout)"
      },
      {
        "command": "fluxDiagram.zoomIn",
        "title": "Zoom In",
        "category": "FluxDiagram",
        "icon": "$(zoom-in)"
      },
      {
        "command": "fluxDiagram.zoomOut",
        "title": "Zoom Out",
        "category": "FluxDiagram",
        "icon": "$(zoom-out)"
      },
      {
        "command": "fluxDiagram.fitToView",
        "title": "Fit to View",
        "category": "FluxDiagram",
        "icon": "$(screen-full)"
      }
    ],
    "customEditors": [
      {
        "viewType": "fluxDiagram.editor",
        "displayName": "Fluxdiagram Editor",
        "selector": [
          {
            "filenamePattern": "*.fluxdiagram"
          }
        ],
        "priority": "default"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fluxDiagram",
          "title": "FluxDiagram",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "fluxDiagram": [
        {
          "id": "fluxDiagram.fluxdiagrams",
          "name": "Fluxdiagrams",
          "icon": "$(symbol-misc)",
          "contextualTitle": "FluxDiagram"
        },
        {
          "id": "fluxDiagram.templates",
          "name": "Templates",
          "icon": "$(file-code)"
        },
        {
          "id": "fluxDiagram.recent",
          "name": "Recent",
          "icon": "$(history)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "fluxDiagram.fluxdiagrams",
        "contents": "No fluxdiagram files found in workspace.\n[Create New Fluxdiagram](command:fluxDiagram.newFluxdiagram)\n[Open Fluxdiagram](command:workbench.action.files.openFile)"
      },
      {
        "view": "fluxDiagram.templates",
        "contents": "Fluxdiagram templates to quickly get started.\n[Process Flow](command:fluxDiagram.templateProcess)\n[Decision Tree](command:fluxDiagram.templateDecision)\n[Swimlane](command:fluxDiagram.templateSwimlane)"
      },
      {
        "view": "fluxDiagram.recent",
        "contents": "No recent fluxdiagrams.\nOpen a .fluxdiagram file to see it here."
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "fluxDiagram.newFluxdiagram",
          "when": "true"
        },
        {
          "command": "fluxDiagram.exportPNG",
          "when": "activeCustomEditorId == fluxDiagram.editor"
        },
        {
          "command": "fluxDiagram.exportSVG",
          "when": "activeCustomEditorId == fluxDiagram.editor"
        },
        {
          "command": "fluxDiagram.autoLayout",
          "when": "activeCustomEditorId == fluxDiagram.editor"
        }
      ],
      "editor/title": [
        {
          "command": "fluxDiagram.zoomIn",
          "when": "activeCustomEditorId == fluxDiagram.editor",
          "group": "navigation@1"
        },
        {
          "command": "fluxDiagram.zoomOut",
          "when": "activeCustomEditorId == fluxDiagram.editor",
          "group": "navigation@2"
        },
        {
          "command": "fluxDiagram.fitToView",
          "when": "activeCustomEditorId == fluxDiagram.editor",
          "group": "navigation@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "fluxDiagram.zoomIn",
        "key": "ctrl+=",
        "mac": "cmd+=",
        "when": "activeCustomEditorId == fluxDiagram.editor"
      },
      {
        "command": "fluxDiagram.zoomOut",
        "key": "ctrl+-",
        "mac": "cmd+-",
        "when": "activeCustomEditorId == fluxDiagram.editor"
      },
      {
        "command": "fluxDiagram.fitToView",
        "key": "ctrl+0",
        "mac": "cmd+0",
        "when": "activeCustomEditorId == fluxDiagram.editor"
      },
      {
        "command": "fluxDiagram.autoLayout",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "activeCustomEditorId == fluxDiagram.editor"
      }
    ],
    "configuration": {
      "title": "FluxDiagram",
      "properties": {
        "fluxDiagram.defaultTheme": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "description": "Default theme for the fluxdiagram editor"
        },
        "fluxDiagram.gridSize": {
          "type": "number",
          "default": 20,
          "minimum": 5,
          "maximum": 100,
          "description": "Grid size for snapping in pixels"
        },
        "fluxDiagram.showGrid": {
          "type": "boolean",
          "default": true,
          "description": "Show grid in the canvas"
        },
        "fluxDiagram.showMinimap": {
          "type": "boolean",
          "default": true,
          "description": "Show minimap for navigation"
        },
        "fluxDiagram.autoSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically save changes"
        },
        "fluxDiagram.undoHistoryLimit": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 200,
          "description": "Maximum number of undo steps"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.js --production",
    "watch": "node esbuild.config.js --watch",
    "dev": "node esbuild.config.js --watch",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.{ts,css,html}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}